---
import Point from "./Point.astro";
---

<section>
    <div class="cols">
        <div>
            <h2 class="title">Experiencia</h2>
            <Point
                duration="2007-2023"
                title="Desarrollador Full Stack"
                centre="Doers DF"
                description="Más de 15 años creando proyectos como la web de **Mahou San Miguel** y **Greenpeace España**."
            />
        </div>
        <div>
            <h2 class="title">Educación</h2>
            <Point
                duration="2010-2011"
                title="Desarrollo apps móviles iOS y Android"
                centre="UNED"
            />
            <Point
                duration="2005-2007"
                title="FP - Explotación de Sistemas Informáticos"
                centre="IES Luis Braille"
            />
            <Point
                duration="2002-2004"
                title="Programación orientada a objectos Visual Basic / C++"
                centre="Cyberdrive"
            />
        </div>
    </div>
</section>

<style>
    section {
        padding: 20px 0;
    }

    .cols {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        max-width: 800px;
        margin: 0 auto;
    }

    @media (max-width: 1180px) {
        .cols {
            flex-direction: column;
            align-items: flex-start;
            padding: 24px;
        }
    }

    .title {
        font-size: 1.2em;
        font-weight: 100;
        margin: 0 0 20px;
    }
</style>
