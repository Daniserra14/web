---
import Github from "./icons/Github.astro";
const { image, title, description, tags, url, github } = Astro.props;
---

<article class="group w-72">
    <div
        class="opacity-20 grayscale group-hover:opacity-100 group-hover:grayscale-0 duration-300 w-72 aspect-video mb-2 overflow-hidden"
    >
        <a href={url} target="_blank">
            <img src={image} alt={title} class="object-cover w-full h-full" />
        </a>
    </div>
    <h3 class="text-2xl font-semibold flex items-center gap-2">
        <a href={url} target="_blank">
            {title}
        </a>
        {
            github && (
                <a
                    href={github}
                    target="_blank"
                    class="flex items-center gap-2 text-white/70 leading-none hover:text-white"
                >
                    <Github />
                </a>
            )
        }
    </h3>
    <p class="leading-tight opacity-60 mt-1 mb-2">
        {description}
    </p>
    {
        tags
            ?.split(",")
            .map((tag: string) => (
                <span class="inline-block bg-gray-200 rounded-full px-3 text-sm font-semibold text-gray-800 mr-2">
                    {tag}
                </span>
            ))
    }
</article>
