    <style>
        footer {
            padding: 30px 0;
        }

        footer p {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 24px;
            font-size: 14px;
        }

        @media (max-width: 550px) {
            footer p {
                flex-direction: column;
            }
        }

        footer a {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }
    </style>
</footer>
